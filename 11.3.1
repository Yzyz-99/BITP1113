#include<iostream>
#include<iomanip>

struct pollution {
	char name[21] = {};
	int id=0;
	double reading[5] = {};
	double total=0;
};

int main() {
	pollution area;
	std::cout << "Please enter area's name : ";
	std::cin.getline(area.name, 21);
	std::cout << "Please enter area's id number : ";
	std::cin >> area.id;
	std::cout << "Please enter five pollution readings : \n";
	for (int i = 0; i < 5; ++i) {
		std::cout << "Polution " << i + 1 << " : ";
		std::cin >> *(area.reading + i);
		area.total += *(area.reading + i);
	}

	std::cout << std::endl<<std::endl<< "Area's name : " << area.name << std::endl;
	std::cout << "Area's id : " << area.id << std::endl;
	std::cout << std::showpoint << std::setprecision(2) << std::fixed;
	for (int i = 0; i < 5; ++i)
		std::cout << "Polution " << i + 1 << " : " << *(area.reading + i) << std::endl;
	std::cout << "Total of the five pollution readings : " << area.total << std::endl;
}
