#include<iostream>

const int SIZE = 8;

int main() {
	int arr[SIZE] = { 5,10,15,20,25,30,35,40 };
	int* p = arr;
	std::cout << "The numbers in set are: ";
	for (int x = 0; x < 8; x++) {
		std::cout << *(p + x)<<" ";
	}
	auto i = std::begin(arr), j = std::end(arr) - 1;
	while (j > i) {
		int temp = *i;
		*i = *j;
		*j = temp;
		++i;
		--j;
	}
	std::cout << std::endl<<"The numbers in set backward are:";
	for (int x = 0; x < 8; x++) {
		std::cout <<*(p + x) << " ";
	}
}
