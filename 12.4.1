#include<iostream>
#include<iomanip>

void getInput(int& num1, int& num2);
double calculate(const int& num1, const int& num2, const char& operation);
void displayResult(const double& result);

int main()
{
	std::cout << std::setw(20) << "MENU\n" << std::setw(20) << "****\n";
	std::cout << "+: Add\n" << "-: Substract\n" << "*: Multiply\n" << "/: Divide\n" << "x: Exit\n";
	char operation;
	int num1, num2;
	std::cout << "Enter your choice : ";
	std::cin >> operation;
	while (operation != 'x') {
		if (operation == '+' || operation == '-' || operation == '*' || operation == '/') {
			getInput(num1, num2);
			double result = calculate(num1, num2, operation);
			displayResult(result);
		}
		else
			std::cout << "Please enter correct operator!\n";
		std::cout << "Enter your choice : ";
		std::cin >> operation;
	}
	return 0;
}

void getInput(int& num1, int& num2) {
	int* p1 = &num1, * p2 = &num2;
	std::cout << "Enter first number : ";
	std::cin >> *p1;
	std::cout << "Enter second number : ";
	std::cin >> *p2;
}
double calculate(const int& num1, const int& num2, const char& operation) {
	double result = 0;
	switch (operation) {
	case '+':
		result = num1 + num2;
		break;
	case '-':
		result = num1 - num2;
		break;
	case '*':
		result = num1 * num2;
		break;
	case '/':
		result = static_cast<double>(num1) / num2;
		break;
	}
	return result;
}

void displayResult(const double& result) {
	std::cout << result << std::endl;
}
